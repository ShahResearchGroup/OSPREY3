    <pathelement location="${basedir}/dist/lib/junit-4.12.jar"/>
    <pathelement location="${basedir}/dist/lib/log4j-1.2.14.jar"/>
    <pathelement location="${basedir}/dist/lib/ojalgo-35.0.jar"/>
    <pathelement location="${basedir}/dist/lib/xml-apis-1.0.b2.jar"/>
  </path>
  
  <path id="library.lib1.classpath">
    <pathelement location="${basedir}/lib/Jama-1.0.3.jar"/>
    <pathelement location="${basedir}/lib/architecture-rules-3.0.0-M1.jar"/>
    <pathelement location="${basedir}/lib/colt-1.2.0.jar"/>
    <pathelement location="${basedir}/lib/commons-beanutils-1.6.jar"/>
    <pathelement location="${basedir}/lib/commons-collections-2.1.jar"/>
    <pathelement location="${basedir}/lib/commons-digester-1.6.jar"/>
